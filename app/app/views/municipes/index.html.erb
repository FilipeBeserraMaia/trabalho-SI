<p style="color: green"><%= notice %></p>

<h1><%= Utility.translate_attr(Municipe, :collection_name).to_s %></h1>

<div class="">
  <% if can?(:new, Municipe) %>
    <span class="pull-left m-2"><%= new_btn(Municipe, new_municipe_path, { remote: true }) %></span>
  <% end %>
  <div class="">
    <%= form_with(url: search_municipes_path, method: :get, id: 'form-search-municipe', remote: true) do |f| %>
      <%= f.text_field :term, class: 'form-control', id: 'search-municipe', placeholder: ". . ." %>
    <% end %>
  </div>

  <div id="municipes-table" class="table-responsive m-2">
    <%= render 'table_municipe', municipes: @municipes %>
  </div>

</div>


<script>

    let searchField = $("#search-municipe")
    searchField.on('change', function (e) {
        $("#search-municipe").submit()
    });
</script>

